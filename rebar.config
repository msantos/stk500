{deps, [
    {srly, "0.6.2"}
]}.

{post_hooks, [
    {edoc,
        "ex_doc --config .ex_doc.config --source-url \"https://github.com/msantos/stk500\" --source-ref \"master\" \"stk500\" `erl -noshell -s init stop -eval '{ok, [{_,_,X}]} = file:consult(\"src/stk500.app.src\"), io:format(\"~s\", [proplists:get_value(vsn, X, \"0.0.0\")]).'` _build/default/lib/stk500/ebin"}
]}.

{edoc_opts, [
    {doclet, edoc_doclet_chunks},
    {layout, edoc_layout_chunks},
    {dir, "_build/default/lib/stk500/doc"}
]}.
